@{
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
    ViewBag.Title = "ContactUs";
}

<!-- page heading area start -->
<section id="blog-banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="blog_details_heading text-center">
                    <h2>CONTACT US</h2>
                    <h3>Home / Contact</h3>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- page heading area end -->
<!-- contact us area start -->
<section id="contact_area">
    <div class="container">
        <div class="row">
            <div class="detials">
                <div class="col-md-5">
                    <div class="details_heading_contact">
                        <h2>Drop us a Message</h2>
                        <p>
                            Autobots is nothing without its valued customers, therefore we promise to read every feedback if not respond to it. For any complaints, suggestions and remarks
                        </p>
                    </div>

                    <div class="contact-social">
                        <div class="col-md-2">
                            <i class="flaticon-pin56"></i>
                        </div>
                        <div class="col-md-10">
                            <div class="social_text">
                                <h2>ADDRESS</h2>
                                <p>Johar town Lahore</p>
                            </div>
                        </div>
                    </div>
                    <div class="contact-social">
                        <div class="col-md-2">
                            <i class="flaticon-telephone51"></i>
                        </div>
                        <div class="col-md-10">
                            <div class="social_text">
                                <h2>PHONE</h2>
                                <p>+923214007514</p>
                            </div>
                        </div>
                    </div>
                    <div class="contact-social">
                        <div class="col-md-2 ">
                            <i class="flaticon-messages8"></i>
                        </div>
                        <div class="col-md-10">
                            <div class="social_text">
                                <h2>EMAIL</h2>
                                <p>Autobots@gmail.com</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="contact_img">
                        <img src="~/Content/Front/img/contact-page/contact-img.jpg" alt="" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- contact us area end -->
<!-- map area start -->
<section id="map_area">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-md-5">
                <div class="gogle-map-heading">
                    <h2>Office Map Location</h2>
                </div>
                @*<div class="google-map">

                </div>*@
            </div>
            <div class="col-lg-7 col-md-7">
                @using (Html.BeginForm("Contact", "Home", FormMethod.Post)) { 
                <div class="comment_form">
                    <h2>Send Message</h2>
                    <div class="col-lg-4 col-md-4">
                        <div class="contact_details">
                            <h2>Full Name</h2>
                            <input type="text" name="Name" placeholder="Your Name" />
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4">
                        <div class="contact_details">
                            <h2>Email</h2>
                            <input type="email" name="Email" value="" placeholder="Your Email" />
                        </div>
                    </div>
                    
                    <div class="col-lg-4 col-md-4">
                        <div class="contact_details">
                            <h2>Contact No</h2>
                            <input type="text" name="Number" placeholder="Enter Number" />
                        </div>
                    </div>
                    
                    
                    <div class="form_textarea_contact">
                        <h2>Comment</h2>
                        <textarea name="message" cols="30" rows="12" placeholder="Your Message Here"></textarea>
                    </div>
                    <button class="btn-info hvr-bounce-to-right contact_button" type="submit">SEND</button>
                </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- map area end -->
<!-- Brand icon area start -->
